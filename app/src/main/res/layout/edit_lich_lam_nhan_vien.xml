<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sắp ca cho nhân viên"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã lịch làm: 1"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:id="@+id/malichlamu"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhân viên"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_margin="10dp"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/spnNVLu"
        android:background="@drawable/brnhanvien"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ca làm"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_margin="10dp"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/spnCalamu"
        android:background="@drawable/brnhanvien"
        android:layout_margin="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày bắt đầu"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                />
            <EditText
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/brnhanvien"
                android:layout_margin="10dp"
                android:cursorVisible="false"
                android:clickable="true"
                android:focusable="false"
                android:gravity="center"
                android:inputType="text"
                android:id="@+id/edtNBDu"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày kết thúc"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                />
            <EditText
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:cursorVisible="false"
                android:clickable="true"
                android:focusable="false"
                android:gravity="center"
                android:inputType="text"
                android:background="@drawable/brnhanvien"
                android:layout_margin="10dp"
                android:id="@+id/edtNKTu"
                />
        </LinearLayout>
    </LinearLayout>
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giờ bắt đầu"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                />
            <EditText
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/brnhanvien"
                android:layout_margin="10dp"
                android:cursorVisible="false"
                android:clickable="true"
                android:focusable="false"
                android:gravity="center"
                android:inputType="text"
                android:id="@+id/edtGBDu"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giờ kết thúc"
                android:cursorVisible="false"
                android:clickable="true"
                android:focusable="false"
                android:gravity="center"
                android:inputType="text"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                />
            <EditText
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/brnhanvien"
                android:layout_margin="10dp"
                android:cursorVisible="false"
                android:clickable="true"
                android:focusable="false"
                android:gravity="center"
                android:inputType="text"
                android:id="@+id/edtGKTu"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnXNCu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btnXoa"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            />
    </LinearLayout>

</LinearLayout>