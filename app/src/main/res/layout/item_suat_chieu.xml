<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardSC"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/brnhanvien"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/image3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMaSuatChieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã suất chiếu"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvTenSC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tên suat chiếu"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tvTenPC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tên phòng chiếu"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvGioChieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Giờ chiếu"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvNgayChieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Ngày chiếu"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>