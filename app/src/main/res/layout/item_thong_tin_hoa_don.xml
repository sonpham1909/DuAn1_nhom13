<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/backtt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HÓA ĐƠN VHI TIẾT"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã hóa đơn: 1"
        android:textStyle="bold"
        android:textSize="15sp"
      android:layout_margin="10dp"
        android:id="@+id/tvmahd"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhân viên: "
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:id="@+id/tvnvtt"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khách hàng: "
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:id="@+id/tvkhachhangtt"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phim: "
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:id="@+id/tvPhimTT"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suất chiếu: "
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:id="@+id/tvsuatchieutt"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số lượng: "
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:id="@+id/tvsoLuongtt"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày in: "

        android:textSize="15sp"
        android:layout_margin="10dp"
        android:id="@+id/tvngayintt"


        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120000 VND"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#F44336"
        android:layout_margin="40dp"
        android:id="@+id/tvthanhtien"
        android:layout_gravity="end"


        />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="horizontal">
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Sửa"
          android:layout_marginRight="70dp"
          android:id="@+id/suaHD"
          />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Xóa"
          android:id="@+id/xoaHD"
          />
  </LinearLayout>


</LinearLayout>