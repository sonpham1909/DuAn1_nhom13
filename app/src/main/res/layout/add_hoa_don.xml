<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Mã nhân viên"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edMaNhanVien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/brnhanvien"
            android:clickable="true"
            android:focusable="false"
            android:inputType="text"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Khách hàng"
            android:textColor="@color/black"
            android:textSize="20dp" />

     <Spinner
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:id="@+id/spn_khachhang"
         android:layout_marginHorizontal="10dp"

         android:background="@drawable/brnhanvien"
         />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Số lượng vé"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edSoLuongVe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:maxLength="2"
            android:background="@drawable/brnhanvien"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Phim"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/spn_phim"
            android:layout_marginHorizontal="10dp"

            android:background="@drawable/brnhanvien"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Suất chiếu"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/spn_SC"
            android:layout_marginHorizontal="10dp"

            android:background="@drawable/brnhanvien"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Ngày in hóa đơn"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/lich" />

            <EditText
                android:id="@+id/edNgayInHoaDon"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:focusable="false"
                android:inputType="text"
                android:background="@drawable/brnhanvien"
                android:padding="5dp" />
        </LinearLayout>
<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            android:text="Chưa thanh toán"-->
<!--            android:layout_gravity="center"-->
<!--            android:textColor="#F44336"-->
<!--            android:textSize="16dp"-->
<!--            android:layout_margin="5dp"-->

    </LinearLayout>

    <EditText
        android:id="@+id/edNet"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="TỔNG TIỀN"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvTongtienadd"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="0 VND"
            android:textColor="#F44336"
            android:textSize="25dp"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/btnthemHD"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/vien"
            android:text="THÊM"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnHuyHD"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/vien"
            android:inputType="number"
            android:text="HỦY"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>